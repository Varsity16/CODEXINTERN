#4
s = input("Enter a sentence: ")
w, d, u, l = 0, 0, 0, 0

# Count words
l_w = s.split()
w = len(l_w)

# Count digits, uppercase letters, and lowercase letters
for c in s:
    if c.isdigit():
        d += 1
    elif c.isupper():
        u += 1
    elif c.islower():
        l += 1

# Output the results
print("No of Words: ", w)
print("No of Digits: ", d)
print("No of Uppercase letters: ", u)
print("No of Lowercase letters: ", l)
